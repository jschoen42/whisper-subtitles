{
  "explorer.compactFolders": false,
  "editor.fontSize": 13,
  "editor._fontFamily": "Consolas, 'Courier New', monospace",
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "editor._autoClosingQuotes": "never",
  "editor._autoSurround": "never",
  "terminal.integrated.minimumContrastRatio": 7,
  "[html]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.formatOnType": true
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.formatOnType": true
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor._fontFamily": "'Ubuntu Mono', Consolas",
    "editor._fontWeight": 400,
    "editor._lineHeight": 1.4,
    "editor._fontSize": 14,
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "[yaml]": {
    "editor.tabSize": 4,
    "editor._fontFamily": "'Roboto Mono', 'Ubuntu Mono', Consolas",
    "editor._fontLigatures": true,
    "editor._fontWeight": 400,
    "editor._fontSize": 12,
    "editor.lineHeight": 1.3,
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnType": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.suggest.insertMode": "insert",
    "editor.autoClosingBrackets": "never",
    "editor.suggestOnTriggerCharacters": false,
    "python.analysis.typeCheckingMode": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "on",
      "other": "on"
    }
  },
  "python.analysis.exclude": [
    "data/**",
    "result/**",
    ".git/**",
    ".venv/**",
    ".mypy_cache/**",
    "**/__pycache__/**",
    "dist/**",
    "build/**",
  ],
  "_errorLens.codeLensEnabled": true,
  "errorLens.delay": 2000,
  "errorLens.followCursor": "activeLine",
  "markdownlint.config": {
    "MD041": false
  }
}